
@{
    Layout = null;
}


<!doctype html>
<div><html class="no-js " lang="en">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Responsive Bootstrap 4 and web Application ui kit.">

    <title>Đăng nhập</title>
    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <!-- Custom Css -->
    <link href="~/Content/Login/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Login/css/style.min.css" rel="stylesheet" />
</head>
<body class="theme-blush">
    <div class="authentication">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-12">
                    <form class="card auth_form" method="post" action="/Home/Login">
                        <div class="header">
                            <img class="logo" src="~/Content/Login/img/Logo_MTA_new.png" alt="">
                            <h5>ĐĂNG NHẬP</h5>
                        </div>
                        <div class="body">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="Tên đăng nhập" name="model[0]">
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="zmdi zmdi-account-circle"></i></span>
                                </div>
                            </div>
                            @*<i style="color:#ff0000">@Html.ValidationMessage("errorUsername")</i>*@
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" placeholder="Mật khẩu" name="model[1]">
                            </div>
                            @*<i style="color:#ff0000">@Html.ValidationMessage("errorPassword")</i>*@
                            <div class="checkbox">
                                <input id="remember_me" type="checkbox">
                                <label for="remember_me">Nhớ mật khẩu</label>
                            </div>
                            <label style="color:red;">@ViewBag.Message</label>
                            <button class="btn btn-primary btn-block waves-effect waves-light">Đăng nhập</button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-8 col-sm-12">
                    <div class="card">
                        <img src="~/Content/Login/img/signin.svg" alt="Sign In" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/Content/Login/Js/libscripts.bundle.js"></script>
    <script src="~/Content/Login/Js/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
</body>
</html></div>