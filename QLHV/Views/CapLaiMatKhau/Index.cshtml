@model QLHV.Models.ViewModels.CapMatKhau.CapMatKhauView
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<div id="app">
    <div class="main-wrapper">
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-body">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Cấp lại mật khẩu hội viên</h4>
                                </div>
                                <form method="post" enctype="multipart/form-data">
                                    <div class="card-body">

                                        <div class="form-group">
                                            <label style="color: black">Mã hội viên</label>
                                            <input type="text" name="MaHV" id="ma" class="form-control" onchange="kiemtra()">
                                        </div>
                                        <div class="form-group">
                                            <label style="color: black">Tên hội viên</label>
                                            <input type="text" name="TenDN" id="ten" class="form-control" disabled>
                                        </div>
                                        <div class="form-group" >
                                            <label style="color: black" for="inputPassword4">Mật khẩu mới</label>
                                            <input type="password" name="MatKhau" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label style="color: black" for="inputPassword4">Nhập lại mật khẩu mới</label>
                                            <input type="password" class="form-control" id="inputPassword_1" onchange="sosanh()">
                                        </div>
                                        <br />
                                        <button class="btn btn-success" type="submit">Lưu thay đổi</button>
                                    </div>


                                </form>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Thông tin hội viên</h4>
                                </div>
                                <div class="card-body" id="Content_CTHV">
                                    <div class="tickets">
                                        <div class="ticket-content">
                                            <div class="ticket-title">
                                                <div class="ticket-sender-picture img-shadow" style="margin:5%">
                                                    <img src="~/Models/ImageFile/resetPass.jfif" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </div>
    </div>
</div>
<script>
    function kiemtra() {
        var ma = document.getElementById('ma').value.toString();
        $.ajax({
            type: "POST",
            data: "",
            url: "/CapLaiMatKhau/ThongTinHoiVien/" + ma,
            success: function (data) {
                console.log("get item success")
                $('#Content_CTHV').html(data);
                var ten = document.getElementById('ten');
                ten.value = $(data).find('#tenhv').html();
            },
            error: function (data) {
                console.log("can not get item", data);
            }
        });

    }


</script>

